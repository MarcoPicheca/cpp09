{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compila ex00",
        "type": "shell",
        "command": "g++",
        "args": [
          "-Wall",
          "-Wextra",
          "-Werror",
          "-std=c++98",
          "-g",
          "${workspaceFolder}/ex00/main.cpp", // Cambia se il nome è diverso
          "${workspaceFolder}/ex00/Bitcoin.cpp", // Cambia se il nome è diverso
          "-o",
          "${workspaceFolder}/ex00/btc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Compilazione con flag C++98 e warning attivi"
      }
    ]
  }
  